{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "noImplicitAny": false,
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "webpack",
      "webpack-dev-server",
      "vue"
    ],
    "typeRoots": [
      "/node_modules/@types"
    ],
    "lib": [
      "ES6",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "DOM",
      "webworker"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "strictNullChecks": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}