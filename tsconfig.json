{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "types": ["node", "webpack", "webpack-dev-server"],
    "typeRoots": ["/node_modules/@types"],
    "lib": ["es2017", "dom"],
    "outDir": "dist"
  },

  "include": ["./src/**/*.ts"],
  "exclude": ["/node_modules"]
}
