{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "noImplicitAny": false,
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "types": ["node", "webpack", "webpack-dev-server"],
    "typeRoots": ["/node_modules/@types"],
    "lib": ["es2017", "dom", "webworker"],
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "strictNullChecks": false
  },

  "include": ["./src/**/*.ts", "src/api/rest.worker.js"],
  "exclude": ["/node_modules"]
}
